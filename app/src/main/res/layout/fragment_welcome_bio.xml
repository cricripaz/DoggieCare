<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:paddingHorizontal="30dp">

    <TextView
        android:id="@+id/welcomebienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="@string/que_bueno_que_est_s_aqu"
        />
    <ImageView
        android:id="@+id/welcomeimagen"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomebienvenido"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_femaleowner"
        />

    <EditText
        android:id="@+id/welcomebio"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/round_shaped_input"
        app:layout_constraintTop_toBottomOf="@+id/welcomeimagen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-30dp"
        android:paddingTop="35dp"
android:textColor="@color/white"
        android:hint="CuÃ©ntanos un poco sobre ti..."
        android:textColorHint="@color/white"
        android:gravity="center|top"
        android:inputType="textMultiLine"
        android:maxLines="9"
        android:maxLength="140"
        android:paddingHorizontal="20dp"
        android:paddingBottom="15dp"
        android:textSize="18dp" />

<TextView
    android:id="@+id/welcomecontador"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/welcomebio"
    app:layout_constraintRight_toRightOf="parent"
    android:text="13"
    android:textSize="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:textColor="@color/white"
    />

    <Button
        android:id="@+id/welcomelisto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/welcomebio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/listo"
        android:textColor="@color/lavander"
        android:layout_margin="20dp"
        app:backgroundTint="@null"
        android:textSize="20dp"
        android:background="@drawable/round_shaped_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>

