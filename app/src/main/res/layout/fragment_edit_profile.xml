<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="250dp"
    android:background="@android:color/transparent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:paddingVertical="15dp"
        android:background="@drawable/round_shaped_fragment">

        <EditText
            android:id="@+id/input_nombre"
            android:layout_width="match_parent"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/round_shaped_input"
            android:text="nombre completo"
            android:gravity="center"
            android:textColor="@color/darkblue"
            android:inputType="textPersonName"
            android:layout_height="70sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/input_usuario">
        </EditText>

        <EditText
            android:id="@+id/input_usuario"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/round_shaped_input"
            android:focusable="false"
            android:gravity="center"
            android:text="usuario"
            android:textColor="@color/primary"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/input_bio"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_nombre">
        </EditText>

        <EditText
            android:id="@+id/input_bio"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/round_shaped_input"
            android:text="biografÃ­a"
            android:gravity="center"
            android:textColor="@color/darkblue"
            android:inputType="text"
            android:layout_height="160sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_usuario"
            android:textSize="20sp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent">
        </EditText>

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/guardar"
            android:textColor="@color/lavander"
            android:background="@drawable/round_shaped_button"
            app:backgroundTint="@null"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_bio">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/edit_imageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        app:tint="@color/darkblue">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>