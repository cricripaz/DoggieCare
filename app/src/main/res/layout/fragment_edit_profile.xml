<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="170dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingTop="80dp"
        android:background="@drawable/round_shaped_fragment">

        <EditText
            android:id="@+id/input_nombre"
            android:layout_width="match_parent"
            android:background="@drawable/round_shaped_input"
            android:text="nombre completo"
            android:paddingLeft="20dp"
            android:maxLength="40"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:layout_height="55dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@id/input_bio">
        </EditText>


        <EditText
            android:id="@+id/input_bio"
            android:layout_width="match_parent"
            android:background="@drawable/round_shaped_input"
            android:text="biografÃ­a"
            android:paddingVertical="20dp"
            android:paddingLeft="20dp"
            android:gravity="top|start"
            android:textColor="@color/white"
            android:layout_height="190dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_nombre"
            app:layout_constraintBottom_toTopOf="@id/button_save"
            android:inputType="textMultiLine"
            android:maxLines="9"
            android:maxLength="140"
            android:layout_marginVertical="15dp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="15dp"
            android:textSize="18dp">
        </EditText>

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/guardar"
            android:textColor="@color/lavander"
            android:background="@drawable/round_shaped_button"
            app:backgroundTint="@null"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_bio">
        </Button>

    </LinearLayout>

    <ImageButton
        android:id="@+id/edit_imageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"

        app:tint="@color/darkblue">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>