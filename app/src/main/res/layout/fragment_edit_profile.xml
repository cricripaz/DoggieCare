<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingBottom="40dp"
        android:paddingTop="20dp"
        android:background="@color/primary">

        <RelativeLayout
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_gravity="center"
            android:padding="10dp"
            app:backgroundTint="@null"
            android:background="@drawable/round_margin">

            <ImageButton
                android:id="@+id/edit_imageButton"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:layout_centerInParent="true"

                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"

                android:src="@drawable/ic_edit"
                app:tint="@color/lavander" />
        </RelativeLayout>
        <EditText
            android:id="@+id/input_nombre"
            android:layout_width="match_parent"
            android:background="@drawable/round_shaped_input"
            android:hint="nombre completo"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:maxLength="40"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:layout_height="55dp"
            android:textColorHint="@color/white"
            android:layout_marginBottom="15dp"
            android:textSize="18dp">
        </EditText>


        <EditText
            android:id="@+id/input_bio"
            android:layout_width="match_parent"
            android:background="@drawable/round_shaped_input"
            android:hint="biografÃ­a"
            android:paddingVertical="20dp"
            android:gravity="top|start"
            android:textColor="@color/white"
            android:inputType="textMultiLine"
            android:textColorHint="@color/white"
            android:maxLines="9"
            android:maxLength="140"
            android:paddingHorizontal="20dp"
            android:paddingBottom="15dp"
            android:textSize="18dp" android:layout_height="170dp">
        </EditText>

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/guardar"
            android:textColor="@color/lavander"
            android:background="@drawable/round_shaped_button"
            app:backgroundTint="@null"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="40dp">
        </Button>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>